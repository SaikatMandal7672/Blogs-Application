generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blogs{
  id          String @id @default(uuid())
  name        String
  title       String? @default("Untitled")
  content     String?
  coverImage  String?
  userId      String
  orgId       String?
  createdAt   DateTime?
  updatedAt   DateTime?
  isDraft     Boolean @default(true)
  isPublished Boolean @default(false)
}